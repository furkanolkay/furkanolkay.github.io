---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const blogPosts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const projects = (await getCollection('projects'))
  .filter(project => !project.data.draft)
  .sort((a, b) => (b.data.date?.getTime() || 0) - (a.data.date?.getTime() || 0));

const allContent = [
  ...blogPosts.map(post => ({ type: 'blog', title: post.data.title, date: post.data.date, id: post.id })),
  ...projects.map(project => ({ type: 'project', title: project.data.title, date: project.data.date || new Date(), id: project.id }))
].sort((a, b) => b.date.getTime() - a.date.getTime());
---

<BaseLayout 
  title="Archives - Blog Posts & Projects"
  description="Browse all blog posts and projects by date. Explore Flutter development articles, mobile app projects, and software engineering content chronologically."
  keywords={["archives", "blog archive", "project archive", "flutter articles", "mobile development history"]}
>
  <Navigation />
  
  <section class="pt-32 pb-24 min-h-screen bg-gradient-to-br from-slate-950 via-purple-950 to-slate-900">
    <div class="container mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 backdrop-blur-sm border border-purple-500/30 rounded-full mb-6">
          <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-purple-300">Arşiv</span>
        </div>
        
        <h1 class="text-5xl font-bold text-white mb-4">
          Arşiv
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg">
          Tüm blog yazıları ve projeler kronolojik sırayla listelenmiştir.
        </p>
      </div>

      <!-- Archives List -->
      <div class="max-w-4xl mx-auto space-y-4">
        {allContent.map((item) => {
          const date = new Date(item.date);
          const monthNames = ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran', 'Temmuz', 'Ağustos', 'Eylül', 'Ekim', 'Kasım', 'Aralık'];
          const formattedDate = date.getDate() + ' ' + monthNames[date.getMonth()] + ' ' + date.getFullYear();
          
          return (
            <a href={`/${item.type}/${item.id}`} class="group archive-item block">
              <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                  <div class="flex-grow">
                    <h3 class="text-white mb-2 group-hover:text-purple-400 transition-colors text-xl font-bold">
                      {item.title}
                    </h3>
                    <span class="inline-flex items-center gap-2 px-3 py-1 bg-purple-500/20 border border-purple-500/30 rounded-full text-sm text-purple-300 capitalize">
                      {item.type === 'blog' ? (
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                        </svg>
                      ) : (
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                        </svg>
                      )}
                      {item.type === 'blog' ? 'Blog Yazısı' : 'Proje'}
                    </span>
                  </div>
                  <div class="flex items-center gap-2 text-gray-400 text-sm whitespace-nowrap">
                    <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {formattedDate}
                  </div>
                </div>
              </div>
            </a>
          );
        })}
      </div>

      {allContent.length === 0 && (
        <div class="text-center py-16">
          <p class="text-gray-400 text-lg">Henüz içerik bulunmamaktadır.</p>
        </div>
      )}
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .archive-item {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .archive-item.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // Fade in animation on scroll
  const archiveObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('visible');
        }, index * 50);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.archive-item').forEach(item => {
    archiveObserver.observe(item);
  });
</script>
