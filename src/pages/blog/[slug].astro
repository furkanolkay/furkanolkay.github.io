---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => {
    // Remove .md extension from slug if present
    const slug = post.id.replace(/\.md$/, '');
    return {
      params: { slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();

const date = new Date(post.data.date);
// Month names will be updated by JavaScript based on language
const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
const formattedDate = date.getDate() + ' ' + monthNames[date.getMonth()] + ' ' + date.getFullYear();

// SEO metadata
const postImage = post.data.cover?.image 
  ? `https://furkanolkay.com/blog/img/${post.data.cover.image}` 
  : 'https://furkanolkay.com/furkanolkay.webp';
const publishedTime = post.data.date.toISOString();
const keywords = post.data.keywords || post.data.tags || [];
---

<BaseLayout 
  title={post.data.title}
  description={post.data.description || post.data.title}
  keywords={keywords}
  type="article"
  image={postImage}
  publishedTime={publishedTime}
  modifiedTime={publishedTime}
>
  <Navigation />
  
  <article class="pt-32 pb-24 min-h-screen bg-gradient-to-br from-slate-950 via-purple-950 to-slate-900">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto">
        <!-- Back Button -->
        <a href="/blog" class="inline-flex items-center gap-2 text-gray-400 hover:text-purple-400 transition-colors mb-8 group">
          <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span data-i18n="blog.backToBlog">Back to Blog</span>
        </a>

        <!-- Header -->
        <header class="mb-12">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 backdrop-blur-sm border border-purple-500/30 rounded-full mb-6">
            <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            <span class="text-purple-300" data-i18n="blog.postBadge">Blog Post</span>
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
            {post.data.title}
          </h1>
          
          <div class="flex items-center gap-6 text-gray-400 mb-6">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span id="blog-date">{formattedDate}</span>
            </div>
          </div>

          {post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map(tag => (
                <span class="px-4 py-2 bg-purple-500/20 border border-purple-500/30 rounded-full text-sm text-purple-300">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <!-- Content -->
        <div class="prose prose-invert prose-lg max-w-none">
          <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-8 md:p-12">
            <div class="prose prose-invert prose-headings:text-white prose-p:text-gray-300 prose-a:text-purple-400 prose-strong:text-white prose-code:text-purple-400 prose-pre:bg-slate-900 prose-pre:border prose-pre:border-white/10 prose-img:rounded-2xl prose-img:shadow-xl">
              <Content />
            </div>
          </div>
        </div>

        <!-- Footer Actions -->
        <div class="mt-12 pt-8 border-t border-white/10 flex justify-center">
          <a href="/blog" class="inline-flex items-center gap-2 px-6 py-3 bg-white/5 hover:bg-white/10 border border-white/10 rounded-xl text-white transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span data-i18n="blog.backToBlog">Back to Blog</span>
          </a>
        </div>
      </div>
    </div>
  </article>

  <Footer />
</BaseLayout>

<style is:global>
  .prose {
    color: #d1d5db;
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4 {
    color: white;
    font-weight: 700;
  }
  
  .prose h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }
  
  .prose a {
    color: #a78bfa;
    text-decoration: none;
    border-bottom: 1px solid rgba(168, 139, 250, 0.3);
    transition: all 0.2s;
  }
  
  .prose a:hover {
    color: #f472b6;
    border-bottom-color: rgba(244, 114, 182, 0.5);
  }
  
  .prose code {
    background: rgba(168, 85, 247, 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  
  .prose pre {
    background: #0f172a;
    padding: 1.5rem;
    border-radius: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .prose pre code {
    background: transparent;
    padding: 0;
    color: #e2e8f0;
  }
  
  .prose img {
    margin: 2rem 0;
    max-width: 100%;
  }
  
  .prose ul, .prose ol {
    margin: 1.25rem 0;
    padding-left: 2rem;
  }
  
  .prose li {
    margin: 0.5rem 0;
  }
  
  .prose blockquote {
    border-left: 4px solid #9333ea;
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: #cbd5e1;
    font-style: italic;
  }
  
  .prose hr {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin: 2rem 0;
  }
</style>

<script is:inline>
  // Update date format based on language
  function updateBlogDate() {
    const dateElement = document.getElementById('blog-date');
    if (!dateElement) return;

    // Get the original date from data attribute or parse from text
    const dateText = dateElement.textContent.trim();
    const dateMatch = dateText.match(/(\d+)\s+(\w+)\s+(\d+)/);
    if (!dateMatch) return;

    const day = dateMatch[1];
    const monthName = dateMatch[2];
    const year = dateMatch[3];

    // Find month index from Turkish month names
    const turkishMonths = ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran', 'Temmuz', 'Ağustos', 'Eylül', 'Ekim', 'Kasım', 'Aralık'];
    const englishMonths = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
    
    let monthIndex = turkishMonths.indexOf(monthName);
    if (monthIndex === -1) {
      monthIndex = englishMonths.indexOf(monthName);
    }
    
    if (monthIndex === -1) return;

    if (window.i18n) {
      const lang = window.i18n.getLanguage();
      const months = lang === 'tr' ? turkishMonths : englishMonths;
      const newMonthName = months[monthIndex];
      if (newMonthName) {
        dateElement.textContent = `${day} ${newMonthName} ${year}`;
      }
    }
  }

  // Update on language change
  window.addEventListener('languagechange', () => {
    setTimeout(updateBlogDate, 100);
  });

  // Initial update
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(updateBlogDate, 200);
    });
  } else {
    setTimeout(updateBlogDate, 200);
  }
</script>
