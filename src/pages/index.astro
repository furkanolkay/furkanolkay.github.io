---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import Skills from '../components/Skills.astro';
import VibeCoding from '../components/VibeCoding.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const blogPosts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 6);

const projects = (await getCollection('projects'))
  .filter(project => !project.data.draft);

const siteTitle = 'Furkan Olkay - Software Engineer & Flutter Developer';
const siteDescription = 'Software Engineer, Mobile Team Lead, and Flutter Developer. Expert in mobile app development, team leadership, and creating high-performance cross-platform applications.';
const siteKeywords = ['Software Engineer', 'Flutter Developer', 'Mobile Development', 'Team Lead'];
---

<BaseLayout 
  title={siteTitle}
  description={siteDescription}
  keywords={siteKeywords}
>
  <Navigation />
  <Hero />
  
  <!-- Scroll Indicator -->
  <div class="fixed bottom-8 left-1/2 -translate-x-1/2 z-50 scroll-indicator group cursor-pointer" id="scroll-indicator">
    <div class="flex flex-col items-center gap-2">
      <span class="text-purple-400 text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300" id="scroll-text">Scroll</span>
      <svg class="w-6 h-6 text-purple-400 scroll-arrow" id="scroll-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </div>
  
  <Stats />

  <!-- About Section -->
  <section id="about" class="py-24 relative overflow-hidden bg-gradient-to-br from-slate-900 via-purple-900 to-slate-800">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 backdrop-blur-sm border border-purple-500/30 rounded-full mb-6">
          <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span class="text-purple-300" data-i18n="about.badge">About Me</span>
        </div>
        
        <h2 class="mb-6 text-white text-4xl font-bold" data-i18n="about.title">Hello, I'm Furkan Olkay</h2>
        <p class="text-gray-300 text-lg leading-relaxed mb-8" data-i18n="about.description">
          I'm a Software Engineer, Mobile Team Lead, and Flutter Developer with 5+ years of experience. I develop high-performance, user-friendly mobile applications for iOS and Android. I'm specialized in the Flutter ecosystem and develop projects with modern software architectures and best practices.
        </p>
        
        <div class="flex justify-center">
          <img src="/furkanolkay.webp" alt="Furkan Olkay - Software Engineer, Mobile Team Lead, and Flutter Developer" class="w-48 h-48 rounded-full border-4 border-purple-500/50 shadow-[0_0_30px_rgba(168,85,247,0.5)]" />
        </div>
      </div>
    </div>
  </section>

  <Skills />

  <VibeCoding />

  <!-- Projects Section -->
  <section id="projects" class="py-24 relative overflow-hidden bg-gradient-to-br from-slate-950 via-purple-950 to-slate-900">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 backdrop-blur-sm border border-purple-500/30 rounded-full mb-4">
          <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          <span class="text-purple-300" data-i18n="projects.badge">Featured Projects</span>
        </div>
        
        <h2 class="mb-4 text-white text-4xl font-bold" data-i18n="projects.title">My Projects</h2>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg" data-i18n="projects.description">
          High-performance mobile applications I've developed in recent years
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {projects.map((project) => {
          const projectSlug = project.id.replace(/\.md$/, '');
          return (
          <a href={'/projects/' + projectSlug} class="group relative project-card h-full flex flex-col">
            <div class="absolute inset-0 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 rounded-3xl blur-2xl opacity-0 group-hover:opacity-30 transition-opacity"></div>
            
            <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl overflow-hidden hover:border-purple-500/50 transition-all h-full flex flex-col">
              {project.data.cover?.image && (
                <div class="relative overflow-hidden aspect-[3/2] bg-gradient-to-br from-purple-900/20 to-slate-900/20 flex items-center justify-center p-4">
                  <img src={'/projects/' + project.data.cover.image} alt={project.data.title} class="max-w-[85%] max-h-[85%] w-auto h-auto object-contain group-hover:scale-105 transition-transform duration-500" />
                </div>
              )}
              
              <div class="p-6 flex-1 flex flex-col">
                <h3 class="mb-2 text-white group-hover:text-purple-400 transition-colors text-xl font-bold line-clamp-2 min-h-[3.5rem]">
                  {project.data.title}
                </h3>
                {project.data.description && (
                  <p class="text-gray-400 mb-4 line-clamp-2 flex-shrink-0">{project.data.description}</p>
                )}
                
                {project.data.tags && project.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-auto">
                    {project.data.tags.slice(0, 3).map(tag => (
                      <span class="px-3 py-1.5 bg-purple-500/20 border border-purple-500/30 rounded-full text-sm text-purple-300">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </div>
          </a>
          );
        })}
      </div>
      
      <div class="text-center mt-12">
        <a href="/projects" class="inline-block px-8 py-3 bg-purple-600 text-white rounded-xl hover:bg-purple-700 transition-all" data-i18n="projects.viewAll">
          View All Projects →
        </a>
      </div>
    </div>
  </section>

  <!-- Blog Section -->
  <section id="blog" class="py-24 relative overflow-hidden bg-gradient-to-br from-slate-900 via-purple-900 to-slate-800">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 backdrop-blur-sm border border-purple-500/30 rounded-full mb-4">
          <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <span class="text-purple-300" data-i18n="blog.badge">Latest Posts</span>
        </div>
        
        <h2 class="mb-4 text-white text-4xl font-bold" data-i18n="blog.title">My Blog Posts</h2>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg" data-i18n="blog.description">
          Articles about Flutter, mobile development, and software engineering
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.map((post) => {
          const date = new Date(post.data.date);
          // Month names will be updated by JavaScript based on language
          const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
          const formattedDate = date.getDate() + ' ' + monthNames[date.getMonth()] + ' ' + date.getFullYear();
          const postSlug = post.id.replace(/\.md$/, '');
          
          return (
            <a href={'/blog/' + postSlug} class="group relative blog-card">
              <div class="absolute inset-0 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 rounded-3xl blur-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>
              
              <article class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-6 hover:bg-white/10 transition-all h-full">
                <h3 class="mb-2 text-white group-hover:text-purple-400 transition-colors text-xl font-bold">
                  {post.data.title}
                </h3>
                <p class="text-gray-400 text-sm mb-4">{formattedDate}</p>
                {post.data.description && (
                  <p class="text-gray-300 line-clamp-3">{post.data.description}</p>
                )}
              </article>
            </a>
          );
        })}
      </div>
      
      <div class="text-center mt-12">
        <a href="/blog" class="inline-block px-8 py-3 bg-purple-600 text-white rounded-xl hover:bg-purple-700 transition-all" data-i18n="blog.viewAll">
          View All Posts →
        </a>
      </div>
    </div>
  </section>

  <Contact />

  <Footer />
</BaseLayout>

<style>
  .project-card, .blog-card {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .project-card.visible, .blog-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .scroll-indicator {
    animation: scrollIndicator 2s ease-in-out infinite;
  }

  .scroll-arrow {
    animation: arrowBounce 2s ease-in-out infinite;
    transition: transform 0.3s ease;
  }

  @keyframes scrollIndicator {
    0%, 100% {
      transform: translate(-50%, 0);
      opacity: 0.7;
    }
    50% {
      transform: translate(-50%, -10px);
      opacity: 1;
    }
  }

  @keyframes arrowBounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  .scroll-arrow.rotated {
    animation: arrowBounceRotated 2s ease-in-out infinite;
  }

  @keyframes arrowBounceRotated {
    0%, 100% {
      transform: rotate(180deg) translateY(0);
    }
    50% {
      transform: rotate(180deg) translateY(-8px);
    }
  }
</style>

<script is:inline>
  // Fade in animation on scroll for cards
  const cardObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('visible');
        }, index * 100);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.project-card, .blog-card').forEach(card => {
    cardObserver.observe(card);
  });

  // Smooth scroll function (Safari compatible)
  let isScrollingProgrammatically = false;
  
  function smoothScrollTo(target) {
    const targetElement = typeof target === 'string' ? document.querySelector(target) : target;
    if (!targetElement) return;

    isScrollingProgrammatically = true;
    const targetPosition = targetElement.getBoundingClientRect().top + (window.pageYOffset || document.documentElement.scrollTop);
    const startPosition = window.pageYOffset || document.documentElement.scrollTop || window.scrollY;
    const distance = targetPosition - startPosition;
    const duration = Math.min(800, Math.abs(distance) * 0.5);
    let start = null;
    let animationId = null;

    function step(timestamp) {
      if (!start) start = timestamp;
      const progress = timestamp - start;
      const percentage = Math.min(progress / duration, 1);
      
      // Easing function (easeInOutCubic)
      const ease = percentage < 0.5
        ? 4 * percentage * percentage * percentage
        : 1 - Math.pow(-2 * percentage + 2, 3) / 2;
      
      const currentPosition = startPosition + distance * ease;
      
      // Safari compatible scroll
      if (window.scrollTo) {
        window.scrollTo(0, currentPosition);
      } else {
        document.documentElement.scrollTop = currentPosition;
        document.body.scrollTop = currentPosition;
      }
      
      if (progress < duration) {
        animationId = requestAnimationFrame(step);
      } else {
        // Ensure we end at exact position (Safari compatible)
        if (window.scrollTo) {
          window.scrollTo(0, targetPosition);
        } else {
          document.documentElement.scrollTop = targetPosition;
          document.body.scrollTop = targetPosition;
        }
        isScrollingProgrammatically = false;
        if (animationId) {
          cancelAnimationFrame(animationId);
        }
      }
    }

    animationId = requestAnimationFrame(step);
  }

  // Scroll indicator direction and target update
  function updateScrollIndicator() {
    const scrollIndicator = document.getElementById('scroll-indicator');
    const scrollArrow = document.getElementById('scroll-arrow');
    const scrollText = document.getElementById('scroll-text');
    
    if (!scrollIndicator || !scrollArrow || !scrollText) return;

    const windowHeight = window.innerHeight;
    const documentHeight = document.documentElement.scrollHeight;
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    const scrollBottom = scrollTop + windowHeight;
    
    // Check if we're near the bottom (within 100px)
    const isNearBottom = scrollBottom >= documentHeight - 100;
    
    if (isNearBottom) {
      // At bottom: show up arrow, scroll to top
      scrollArrow.classList.add('rotated');
      if (window.i18n) {
        scrollText.textContent = window.i18n.t('hero.scrollTop');
      } else {
        scrollText.textContent = 'Top';
      }
      scrollIndicator.dataset.target = '#hero';
    } else {
      // At top/middle: show down arrow, scroll to about
      scrollArrow.classList.remove('rotated');
      if (window.i18n) {
        scrollText.textContent = window.i18n.t('hero.scroll');
      } else {
        scrollText.textContent = 'Scroll';
      }
      scrollIndicator.dataset.target = '#about';
    }
  }

  // Click handler for scroll indicator
  const scrollIndicator = document.getElementById('scroll-indicator');
  if (scrollIndicator) {
    scrollIndicator.addEventListener('click', (e) => {
      e.preventDefault();
      const target = scrollIndicator.dataset.target || '#about';
      smoothScrollTo(target);
    });
  }

  // Update on scroll
  let scrollTimeout;
  window.addEventListener('scroll', () => {
    if (!isScrollingProgrammatically) {
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(updateScrollIndicator, 50);
    }
  });

  // Initial check
  updateScrollIndicator();

  // Update on language change
  window.addEventListener('languagechange', updateScrollIndicator);
</script>
