<section id="vibe-coding" class="py-24 relative overflow-hidden bg-gradient-to-br from-slate-950 via-purple-950 to-slate-900">
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(168,85,247,0.15)_0%,transparent_70%)] vibe-bg-animation"></div>
  </div>

  <div class="container mx-auto relative z-10">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 backdrop-blur-sm border border-purple-500/30 rounded-full mb-6">
        <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        <span class="text-purple-300" data-i18n="vibe.badge">Vibe Coding</span>
      </div>
      
      <h2 class="mb-4 text-white text-4xl font-bold" data-i18n="vibe.title">Staying Up-to-Date</h2>
      <p class="text-gray-400 max-w-2xl mx-auto text-lg" data-i18n="vibe.description">
        I code with the latest technologies and trends. Learning something new every day, developing with modern tools.
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <!-- Main Card with Live Coding Effect -->
      <div class="group relative vibe-card">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 rounded-3xl blur-2xl opacity-0 group-hover:opacity-30 transition-opacity"></div>
        
        <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl overflow-hidden hover:bg-white/10 transition-all">
          <!-- Terminal Header -->
          <div class="flex items-center gap-2 px-6 py-4 bg-white/5 border-b border-white/10">
            <div class="flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
              <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
            </div>
            <div class="flex-1 text-center">
              <span class="text-gray-400 text-sm font-mono">furkan@vibe-coding ~</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 rounded-full bg-purple-400 animate-pulse"></div>
              <span class="text-purple-400 text-xs font-mono">LIVE</span>
            </div>
          </div>

          <!-- Code Display -->
          <div class="p-8">
            <div class="font-mono text-sm leading-relaxed min-h-[300px]">
              <!-- Typing Animation Container -->
              <div id="typing-container" class="space-y-1">
                <!-- Code lines will be dynamically added here -->
              </div>
            </div>
          </div>

          <!-- Tech Stack Badges -->
          <div class="px-8 pb-8">
            <div class="flex flex-wrap gap-3 justify-center">
              <span class="px-4 py-2 bg-gradient-to-r from-purple-500/20 to-pink-500/20 border border-purple-500/30 rounded-lg text-purple-300 text-sm font-medium backdrop-blur-sm">
                Flutter 3.x
              </span>
              <span class="px-4 py-2 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 border border-blue-500/30 rounded-lg text-blue-300 text-sm font-medium backdrop-blur-sm">
                Dart 3.x
              </span>
              <span class="px-4 py-2 bg-gradient-to-r from-green-500/20 to-emerald-500/20 border border-green-500/30 rounded-lg text-green-300 text-sm font-medium backdrop-blur-sm">
                Latest Packages
              </span>
              <span class="px-4 py-2 bg-gradient-to-r from-orange-500/20 to-red-500/20 border border-orange-500/30 rounded-lg text-orange-300 text-sm font-medium backdrop-blur-sm">
                Modern Patterns
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .vibe-bg-animation {
    animation: vibeBgPulse 8s ease-in-out infinite;
  }

  @keyframes vibeBgPulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.5;
    }
  }

  .typing-cursor {
    animation: blink 1s infinite;
    display: inline-block;
    width: 2px;
    height: 1.25em;
    background-color: rgb(192, 132, 252);
    margin-left: 4px;
    vertical-align: text-bottom;
  }

  @keyframes blink {
    0%, 50% {
      opacity: 1;
    }
    51%, 100% {
      opacity: 0;
    }
  }

  .vibe-card {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .vibe-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .code-line {
    opacity: 0;
    animation: fadeInLine 0.3s ease forwards;
  }

  @keyframes fadeInLine {
    to {
      opacity: 1;
    }
  }
</style>

<script is:inline>
  (function() {
    // Code snippets to display
    const codeSnippets = [
      { text: '// ðŸš€ Exploring latest Flutter features', color: 'text-gray-500' },
      { text: 'import \'package:flutter/material.dart\';', color: 'text-purple-400' },
      { text: 'import \'package:riverpod/riverpod.dart\';', color: 'text-purple-400' },
      { text: '', color: '' },
      { text: 'void main() {', color: 'text-purple-400' },
      { text: '  runApp(ProviderScope(', color: 'text-white' },
      { text: '    child: MyApp(),', color: 'text-white' },
      { text: '  ));', color: 'text-white' },
      { text: '}', color: 'text-purple-400' },
      { text: '', color: '' },
      { text: 'class MyApp extends StatelessWidget {', color: 'text-purple-400' },
      { text: '  @override', color: 'text-pink-400' },
      { text: '  Widget build(BuildContext context) {', color: 'text-blue-400' },
      { text: '    return MaterialApp.router(', color: 'text-purple-400' },
      { text: '      routerConfig: router,', color: 'text-white' },
      { text: '      theme: ThemeData(', color: 'text-white' },
      { text: '        useMaterial3: true,', color: 'text-white' },
      { text: '        colorScheme: ColorScheme.fromSeed(', color: 'text-white' },
      { text: '          seedColor: Colors.purple,', color: 'text-white' },
      { text: '        ),', color: 'text-white' },
      { text: '      ),', color: 'text-white' },
      { text: '    );', color: 'text-purple-400' },
      { text: '  }', color: 'text-blue-400' },
      { text: '}', color: 'text-purple-400' },
      { text: '', color: '' },
      { text: '// âœ¨ Always learning, always coding!', color: 'text-gray-500' },
    ];

    let typingAnimationStarted = false;

    // Typing animation
    function startTypingAnimation() {
      const container = document.getElementById('typing-container');
      if (!container) return;

      // Prevent multiple starts
      if (typingAnimationStarted) return;
      typingAnimationStarted = true;

      let lineIndex = 0;
      let charIndex = 0;

      function typeNext() {
        if (lineIndex >= codeSnippets.length) {
          // Reset after showing all code
          setTimeout(() => {
            container.innerHTML = '';
            lineIndex = 0;
            charIndex = 0;
            typingAnimationStarted = false;
            startTypingAnimation();
          }, 3000);
          return;
        }

        const currentLine = codeSnippets[lineIndex];
        
        if (charIndex <= currentLine.text.length) {
          // Clear container and rebuild all lines up to current
          container.innerHTML = '';
          
          // Add all completed lines
          for (let i = 0; i < lineIndex; i++) {
            const lineElement = document.createElement('div');
            lineElement.className = `code-line ${codeSnippets[i].color}`;
            lineElement.textContent = codeSnippets[i].text;
            container.appendChild(lineElement);
          }
          
          // Add current line being typed
          if (currentLine.text.length > 0) {
            const currentLineElement = document.createElement('div');
            currentLineElement.className = `code-line ${currentLine.color}`;
            const textContent = currentLine.text.substring(0, charIndex);
            
            // Create a span for the text and cursor
            const textSpan = document.createTextNode(textContent);
            currentLineElement.appendChild(textSpan);
            
            // Add cursor if still typing this line
            if (charIndex < currentLine.text.length) {
              const cursorElement = document.createElement('span');
              cursorElement.className = 'typing-cursor';
              currentLineElement.appendChild(cursorElement);
            }
            
            container.appendChild(currentLineElement);
          } else if (currentLine.text.length === 0) {
            // Empty line with cursor
            const emptyLineElement = document.createElement('div');
            emptyLineElement.className = 'code-line';
            const cursorElement = document.createElement('span');
            cursorElement.className = 'typing-cursor';
            emptyLineElement.appendChild(cursorElement);
            container.appendChild(emptyLineElement);
          }
          
          charIndex++;
          
          if (charIndex > currentLine.text.length) {
            lineIndex++;
            charIndex = 0;
            setTimeout(typeNext, 300);
          } else {
            setTimeout(typeNext, 50);
          }
        }
      }

      typeNext();
    }

    // Initialize animations when DOM is ready
    function initAnimations() {
      // Intersection Observer for animations
      const vibeObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Start typing animation when card is visible
            if (entry.target.classList.contains('vibe-card')) {
              entry.target.classList.add('visible');
              setTimeout(() => {
                startTypingAnimation();
              }, 500);
            }
          }
        });
      }, { threshold: 0.2 });

      // Observe elements
      const vibeCards = document.querySelectorAll('.vibe-card');
      
      vibeCards.forEach(element => {
        vibeObserver.observe(element);
      });
    }

    // Wait for DOM to be ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAnimations);
    } else {
      // DOM is already ready
      setTimeout(initAnimations, 100);
    }
  })();
</script>

