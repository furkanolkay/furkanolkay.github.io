<style>
  .hero-gradient-animation {
    background: radial-gradient(circle at 20% 50%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(167, 139, 250, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(59, 130, 246, 0.3) 0%, transparent 50%);
    animation: gradientShift 20s ease infinite;
  }

  @keyframes gradientShift {
    0%, 100% { transform: scale(1) rotate(0deg); }
    50% { transform: scale(1.1) rotate(5deg); }
  }

  .hero-card-float {
    animation: cardFloat 6s ease-in-out infinite;
  }

  @keyframes cardFloat {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(1deg); }
    50% { transform: translateY(-20px) rotate(0deg); }
    75% { transform: translateY(-10px) rotate(-1deg); }
  }

  .code-line-hero {
    opacity: 0;
    transform: translateX(-20px);
    animation: codeLineFadeIn 0.5s ease forwards;
  }

  @keyframes codeLineFadeIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .code-filename {
    animation: filenameGlow 3s ease-in-out infinite;
  }

  @keyframes filenameGlow {
    0%, 100% {
      text-shadow: 0 0 5px rgba(168, 85, 247, 0.5);
    }
    50% {
      text-shadow: 0 0 15px rgba(168, 85, 247, 0.8), 0 0 25px rgba(168, 85, 247, 0.4);
    }
  }

  .particles-container {
    pointer-events: none;
  }

  .phone-container {
    animation: phoneSlideIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes phoneSlideIn {
    from {
      transform: scale(0.7) translateY(100px);
      opacity: 0;
    }
    to {
      transform: scale(1) translateY(0);
      opacity: 1;
    }
  }

  #phone-modal.active {
    opacity: 1;
    pointer-events: all;
  }

  #phone-modal.active .phone-container {
    animation: phoneSlideIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .phone-wrapper {
    max-height: 85vh;
  }

  .phone-screen {
    aspect-ratio: 9 / 19.5;
    max-height: calc(85vh - 50px);
    display: flex;
    flex-direction: column;
  }

  .phone-content {
    flex: 1;
    min-height: 0;
    overflow-y: auto;
  }

  @media (max-height: 800px) {
    .phone-wrapper {
      max-height: 90vh;
    }
    
    .phone-screen {
      max-height: calc(90vh - 50px);
    }
  }

  @media (max-width: 640px) {
    .phone-wrapper {
      width: 300px !important;
    }
  }
</style>

<script is:inline>
  // Create floating particles
  const particlesContainer = document.querySelector('.particles-container');
  if (particlesContainer) {
    for (let i = 0; i < 20; i++) {
      const particle = document.createElement('div');
      particle.className = 'absolute w-1 h-1 bg-purple-400 rounded-full opacity-0';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.top = Math.random() * 100 + '%';
      particle.style.animation = `particleFloat ${3 + Math.random() * 2}s ease-in-out infinite`;
      particle.style.animationDelay = Math.random() * 2 + 's';
      particlesContainer.appendChild(particle);
    }
  }

  // Add particle animation
  const style = document.createElement('style');
  style.textContent = `
    @keyframes particleFloat {
      0%, 100% {
        transform: translate(0, 0);
        opacity: 0;
      }
      50% {
        transform: translate(${Math.random() * 20 - 10}px, -30px);
        opacity: 1;
      }
    }
  `;
  document.head.appendChild(style);

  // Phone Modal Functionality
  const playBtn = document.getElementById('play-code-btn');
  const closeBtn = document.getElementById('close-modal-btn');
  const phoneModal = document.getElementById('phone-modal');

  function openModal() {
    if (phoneModal) {
      phoneModal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeModal() {
    if (phoneModal) {
      phoneModal.classList.remove('active');
      document.body.style.overflow = '';
    }
  }

  if (playBtn) {
    playBtn.addEventListener('click', openModal);
  }

  if (closeBtn) {
    closeBtn.addEventListener('click', closeModal);
  }

  // Close modal when clicking outside
  if (phoneModal) {
    phoneModal.addEventListener('click', (e) => {
      if (e.target === phoneModal) {
        closeModal();
      }
    });
  }

  // Close modal with Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && phoneModal?.classList.contains('active')) {
      closeModal();
    }
  });

  // LinkedIn Button Functionality
  const phoneLinkedInBtn = document.getElementById('phone-linkedin-btn');
  if (phoneLinkedInBtn) {
    phoneLinkedInBtn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      window.open('https://linkedin.com/in/furkan-saffet-olkay', '_blank', 'noopener,noreferrer');
    });
  }

  // Hero Code Animation
  function animateHeroCode() {
    const codeLines = document.querySelectorAll('.code-line-hero');
    codeLines.forEach((line) => {
      const delay = parseInt(line.dataset.delay || '0');
      setTimeout(() => {
        line.style.animationDelay = '0s';
        line.style.animation = 'codeLineFadeIn 0.5s ease forwards';
      }, delay);
    });
  }

  // Start animation when hero section is visible
  const heroObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        animateHeroCode();
        heroObserver.disconnect();
      }
    });
  }, { threshold: 0.3 });

  const heroSection = document.getElementById('hero');
  if (heroSection) {
    heroObserver.observe(heroSection);
  }
</script>

