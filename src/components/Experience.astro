<style>
  .experience-item {
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .experience-item.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .timeline-dot {
    animation: pulse 2s ease-in-out infinite;
    transition: transform 0.3s ease;
  }

  .experience-item:hover .timeline-dot {
    transform: scale(1.3);
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(168, 85, 247, 0.4);
    }
    50% {
      box-shadow: 0 0 0 20px rgba(168, 85, 247, 0);
    }
  }

  .timeline-line {
    overflow: hidden;
  }

  .timeline-progress {
    transition: height 1s ease;
    background: linear-gradient(to bottom, rgba(168, 85, 247, 0.5), rgba(168, 85, 247, 1));
  }

  .experience-card {
    position: relative;
    overflow: hidden;
  }

  .experience-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(168, 85, 247, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .experience-card:hover::before {
    left: 100%;
  }

  .experience-item.visible .timeline-dot {
    animation: dotAppear 0.5s ease forwards, pulse 2s ease-in-out infinite 0.5s;
  }

  @keyframes dotAppear {
    from {
      transform: scale(0);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>

<script is:inline>
  // Fade in animation on scroll
  const experienceObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('visible');
          
          // Update timeline progress
          const allItems = document.querySelectorAll('.experience-item');
          const visibleItems = Array.from(allItems).filter(item => 
            item.classList.contains('visible')
          );
          const progress = (visibleItems.length / allItems.length) * 100;
          
          const progressBar = document.querySelector('.timeline-progress');
          if (progressBar) {
            progressBar.style.height = progress + '%';
          }
        }, index * 200);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.experience-item').forEach(item => {
    experienceObserver.observe(item);
  });
</script>

