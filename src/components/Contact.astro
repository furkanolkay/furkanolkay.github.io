<section id="contact" class="py-24 relative overflow-hidden bg-gradient-to-br from-slate-900 via-purple-900 to-slate-800">
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(168,85,247,0.15)_0%,transparent_70%)] contact-bg-animation"></div>
  </div>

  <div class="container mx-auto relative z-10">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 backdrop-blur-sm border border-purple-500/30 rounded-full mb-4">
        <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span class="text-purple-300" data-i18n="contact.badge">Contact</span>
      </div>
      
      <h2 class="mb-4 text-white text-4xl font-bold" data-i18n="contact.title">Let's Work Together</h2>
      <p class="text-gray-400 max-w-2xl mx-auto text-lg" data-i18n="contact.description">
        Get in touch with me for your project. I'm here for any questions!
      </p>
    </div>

    <div class="max-w-6xl mx-auto grid lg:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div class="space-y-8 contact-info">
        <div>
          <h3 class="text-white mb-6 text-2xl font-bold" data-i18n="contact.contactInfo">Contact Information</h3>
          
          <div class="space-y-6">
            <a href="mailto:contact@furkanolkay.com" class="group flex items-start gap-4 p-6 bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl hover:bg-white/10 transition-all cursor-pointer contact-item">
              <div class="w-14 h-14 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:rotate-360 transition-transform duration-600">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-gray-400 mb-1" data-i18n="contact.email">Email</p>
                <p class="text-white group-hover:text-blue-400 transition-colors">
                  contact@furkanolkay.com
                </p>
              </div>
            </a>

            <a href="https://linkedin.com/in/furkan-saffet-olkay" target="_blank" rel="noopener noreferrer" class="group flex items-start gap-4 p-6 bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl hover:bg-white/10 transition-all cursor-pointer contact-item">
              <div class="w-14 h-14 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:rotate-360 transition-transform duration-600">
                <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div>
                <p class="text-gray-400 mb-1" data-i18n="contact.linkedin">LinkedIn</p>
                <p class="text-white group-hover:text-purple-400 transition-colors">
                  furkan-saffet-olkay
                </p>
              </div>
            </a>

            <div class="group flex items-start gap-4 p-6 bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl contact-item">
              <div class="w-14 h-14 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="text-gray-400 mb-1" data-i18n="contact.location">Location</p>
                <p class="text-white" data-i18n="contact.locationValue">Istanbul, Turkey</p>
              </div>
            </div>
          </div>
        </div>

      </div>

      <!-- Contact Form -->
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 rounded-3xl blur-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>

        <form id="contact-form" class="relative space-y-6 bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all">
          <div>
            <label for="name" class="block mb-2 text-white font-medium" data-i18n="contact.form.name">
              Your Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              data-i18n-placeholder="contact.form.namePlaceholder"
              placeholder="Full Name"
              class="w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-lg text-white placeholder:text-gray-500 focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/20 focus:shadow-[0_0_20px_rgba(168,85,247,0.2)] outline-none transition-all"
            />
          </div>

          <div>
            <label for="email" class="block mb-2 text-white font-medium" data-i18n="contact.form.email">
              Your Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              data-i18n-placeholder="contact.form.emailPlaceholder"
              placeholder="example@email.com"
              class="w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-lg text-white placeholder:text-gray-500 focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/20 focus:shadow-[0_0_20px_rgba(168,85,247,0.2)] outline-none transition-all"
            />
          </div>

          <div>
            <label for="message" class="block mb-2 text-white font-medium" data-i18n="contact.form.message">
              Your Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              data-i18n-placeholder="contact.form.messagePlaceholder"
              placeholder="Share details about your project..."
              class="w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-lg text-white placeholder:text-gray-500 focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/20 focus:shadow-[0_0_20px_rgba(168,85,247,0.2)] outline-none transition-all resize-none"
            ></textarea>
          </div>

          <button
            type="submit"
            class="group relative w-full px-10 py-4 text-base bg-purple-600 text-white rounded-xl hover:bg-purple-700 transition-all"
          >
            <span class="relative z-10 flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
              </svg>
              <span data-i18n="contact.form.submit">Send Message</span>
            </span>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-bg-animation {
    animation: contactBgPulse 8s ease-in-out infinite;
  }

  @keyframes contactBgPulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.5;
    }
  }

  .contact-item {
    opacity: 0;
    transform: translateX(-30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .contact-item.visible {
    opacity: 1;
    transform: translateX(0);
  }
</style>

<script is:inline>
  // Contact form submission
  const contactForm = document.getElementById('contact-form');
  if (contactForm) {
    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const formData = new FormData(contactForm);
      const name = formData.get('name');
      const email = formData.get('email');
      const message = formData.get('message');
      
      // Create mailto link with form data
      const subject = encodeURIComponent(`Contact Form - ${name}`);
      const body = encodeURIComponent(
        `Name: ${name}\n` +
        `Email: ${email}\n\n` +
        `Message:\n${message}`
      );
      
      const mailtoLink = `mailto:contact@furkanolkay.com?subject=${subject}&body=${body}`;
      
      // Open mailto link
      window.location.href = mailtoLink;
      
      // Reset form after opening email client
      contactForm.reset();
    });
  }

  // Fade in animation on scroll
  const contactObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('visible');
        }, index * 100);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.contact-item').forEach(item => {
    contactObserver.observe(item);
  });
</script>

