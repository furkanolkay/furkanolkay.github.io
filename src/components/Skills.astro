<section id="skills" class="py-24 relative overflow-hidden bg-gradient-to-br from-slate-900 via-purple-900 to-slate-800">
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(168,85,247,0.1)_0%,transparent_50%)] skills-bg-animation"></div>
  </div>

  <div class="container mx-auto relative z-10">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 backdrop-blur-sm border border-purple-500/30 rounded-full mb-4">
        <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
        </svg>
        <span class="text-purple-300" data-i18n="skills.badge">Technical Skills</span>
      </div>
      
      <h2 class="mb-4 text-white text-4xl font-bold" data-i18n="skills.title">My Expertise Areas</h2>
      <p class="text-gray-400 max-w-2xl mx-auto text-lg" data-i18n="skills.description">
        Skills I've developed with modern technologies and best practices
      </p>
    </div>

    <!-- Skill Categories -->
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <!-- Mobile Development -->
      <div class="group relative skill-category">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-3xl blur-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>
        
        <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-14 h-14 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-2xl flex items-center justify-center group-hover:rotate-360 transition-transform duration-600">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-white text-2xl font-bold">Mobile Development</h3>
          </div>

          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1.5 bg-blue-500/20 border border-blue-500/30 rounded-lg text-blue-300 text-xs font-medium whitespace-nowrap">Flutter</span>
            <span class="px-3 py-1.5 bg-blue-500/20 border border-blue-500/30 rounded-lg text-blue-300 text-xs font-medium whitespace-nowrap">Dart</span>
            <span class="px-3 py-1.5 bg-blue-500/20 border border-blue-500/30 rounded-lg text-blue-300 text-xs font-medium whitespace-nowrap">iOS</span>
            <span class="px-3 py-1.5 bg-blue-500/20 border border-blue-500/30 rounded-lg text-blue-300 text-xs font-medium whitespace-nowrap">Android</span>
            <span class="px-3 py-1.5 bg-blue-500/20 border border-blue-500/30 rounded-lg text-blue-300 text-xs font-medium whitespace-nowrap">Kotlin</span>
            <span class="px-3 py-1.5 bg-blue-500/20 border border-blue-500/30 rounded-lg text-blue-300 text-xs font-medium whitespace-nowrap">Swift</span>
          </div>
        </div>
      </div>

      <!-- State Management -->
      <div class="group relative skill-category">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-pink-500 rounded-3xl blur-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>
        
        <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-14 h-14 bg-gradient-to-r from-purple-500 to-pink-500 rounded-2xl flex items-center justify-center group-hover:rotate-360 transition-transform duration-600">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-3zM14 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1h-4a1 1 0 01-1-1v-3z" />
              </svg>
            </div>
            <h3 class="text-white text-2xl font-bold">State Management</h3>
          </div>

          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1.5 bg-purple-500/20 border border-purple-500/30 rounded-lg text-purple-300 text-xs font-medium whitespace-nowrap">Bloc/Cubit</span>
            <span class="px-3 py-1.5 bg-purple-500/20 border border-purple-500/30 rounded-lg text-purple-300 text-xs font-medium whitespace-nowrap">Riverpod</span>
            <span class="px-3 py-1.5 bg-purple-500/20 border border-purple-500/30 rounded-lg text-purple-300 text-xs font-medium whitespace-nowrap">Provider</span>
            <span class="px-3 py-1.5 bg-purple-500/20 border border-purple-500/30 rounded-lg text-purple-300 text-xs font-medium whitespace-nowrap">GetX</span>
          </div>
        </div>
      </div>

      <!-- Backend & APIs -->
      <div class="group relative skill-category">
        <div class="absolute inset-0 bg-gradient-to-r from-green-500 to-emerald-500 rounded-3xl blur-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>
        
        <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-14 h-14 bg-gradient-to-r from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center group-hover:rotate-360 transition-transform duration-600">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
              </svg>
            </div>
            <h3 class="text-white text-2xl font-bold">Backend & APIs</h3>
          </div>

          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1.5 bg-green-500/20 border border-green-500/30 rounded-lg text-green-300 text-xs font-medium whitespace-nowrap">Firebase</span>
            <span class="px-3 py-1.5 bg-green-500/20 border border-green-500/30 rounded-lg text-green-300 text-xs font-medium whitespace-nowrap">REST API</span>
            <span class="px-3 py-1.5 bg-green-500/20 border border-green-500/30 rounded-lg text-green-300 text-xs font-medium whitespace-nowrap">GraphQL</span>
            <span class="px-3 py-1.5 bg-green-500/20 border border-green-500/30 rounded-lg text-green-300 text-xs font-medium whitespace-nowrap">Supabase</span>
            <span class="px-3 py-1.5 bg-green-500/20 border border-green-500/30 rounded-lg text-green-300 text-xs font-medium whitespace-nowrap">PostgreSQL</span>
            <span class="px-3 py-1.5 bg-green-500/20 border border-green-500/30 rounded-lg text-green-300 text-xs font-medium whitespace-nowrap">MongoDB</span>
          </div>
        </div>
      </div>

      <!-- Architecture & Design -->
      <div class="group relative skill-category">
        <div class="absolute inset-0 bg-gradient-to-r from-orange-500 to-red-500 rounded-3xl blur-2xl opacity-0 group-hover:opacity-20 transition-opacity"></div>
        
        <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-14 h-14 bg-gradient-to-r from-orange-500 to-red-500 rounded-2xl flex items-center justify-center group-hover:rotate-360 transition-transform duration-600">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <h3 class="text-white text-2xl font-bold">Architecture & Design</h3>
          </div>

          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1.5 bg-orange-500/20 border border-orange-500/30 rounded-lg text-orange-300 text-xs font-medium whitespace-nowrap">Clean Architecture</span>
            <span class="px-3 py-1.5 bg-orange-500/20 border border-orange-500/30 rounded-lg text-orange-300 text-xs font-medium whitespace-nowrap">SOLID</span>
            <span class="px-3 py-1.5 bg-orange-500/20 border border-orange-500/30 rounded-lg text-orange-300 text-xs font-medium whitespace-nowrap">Design Patterns</span>
            <span class="px-3 py-1.5 bg-orange-500/20 border border-orange-500/30 rounded-lg text-orange-300 text-xs font-medium whitespace-nowrap">MVVM</span>
            <span class="px-3 py-1.5 bg-orange-500/20 border border-orange-500/30 rounded-lg text-orange-300 text-xs font-medium whitespace-nowrap">MVC</span>
            <span class="px-3 py-1.5 bg-orange-500/20 border border-orange-500/30 rounded-lg text-orange-300 text-xs font-medium whitespace-nowrap">TDD</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Tools & Technologies -->
    <div class="text-center mb-8">
      <h3 class="text-white text-3xl font-bold mb-8" data-i18n="skills.tools">Tools & Technologies</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        <div class="group relative tool-item">
          <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 text-center hover:bg-white/10 transition-all">
            <div class="flex flex-col items-center gap-3">
              <svg class="w-8 h-8 text-purple-400 group-hover:text-pink-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
              <span class="text-gray-400 text-sm group-hover:text-white transition-colors">Git & GitHub</span>
            </div>
          </div>
        </div>
        
        <div class="group relative tool-item">
          <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 text-center hover:bg-white/10 transition-all">
            <div class="flex flex-col items-center gap-3">
              <svg class="w-8 h-8 text-purple-400 group-hover:text-pink-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span class="text-gray-400 text-sm group-hover:text-white transition-colors">CI/CD</span>
            </div>
          </div>
        </div>
        
        <div class="group relative tool-item">
          <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 text-center hover:bg-white/10 transition-all">
            <div class="flex flex-col items-center gap-3">
              <svg class="w-8 h-8 text-purple-400 group-hover:text-pink-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1V9a5 5 0 00-5-5h-4a5 5 0 00-5 5v6z" />
              </svg>
              <span class="text-gray-400 text-sm group-hover:text-white transition-colors">Cloud Services</span>
            </div>
          </div>
        </div>
        
        <div class="group relative tool-item">
          <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 text-center hover:bg-white/10 transition-all">
            <div class="flex flex-col items-center gap-3">
              <svg class="w-8 h-8 text-purple-400 group-hover:text-pink-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span class="text-gray-400 text-sm group-hover:text-white transition-colors">Security</span>
            </div>
          </div>
        </div>
        
        <div class="group relative tool-item">
          <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 text-center hover:bg-white/10 transition-all">
            <div class="flex flex-col items-center gap-3">
              <svg class="w-8 h-8 text-purple-400 group-hover:text-pink-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-gray-400 text-sm group-hover:text-white transition-colors">Testing</span>
            </div>
          </div>
        </div>
        
        <div class="group relative tool-item">
          <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 text-center hover:bg-white/10 transition-all">
            <div class="flex flex-col items-center gap-3">
              <svg class="w-8 h-8 text-purple-400 group-hover:text-pink-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
              </svg>
              <span class="text-gray-400 text-sm group-hover:text-white transition-colors">Design Tools</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills-bg-animation {
    animation: bgPulse 8s ease-in-out infinite;
  }

  @keyframes bgPulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.5;
    }
  }

  .skill-category {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .skill-category.visible {
    opacity: 1;
    transform: translateY(0);
  }


  .tool-item {
    opacity: 0;
    transform: scale(0.5);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .tool-item.visible {
    opacity: 1;
    transform: scale(1);
  }
</style>

<script is:inline>
  // Category animation
  const categoryObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('visible');
        }, index * 100);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.skill-category').forEach(category => {
    categoryObserver.observe(category);
  });

  // Tools animation
  const toolObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('visible');
        }, index * 50);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.tool-item').forEach(tool => {
    toolObserver.observe(tool);
  });
</script>

